# name: test/sql/add_files/add_files_missing_fields.test
# description: test ducklake adding files with missing fields
# group: [add_files]

require ducklake

require parquet

test-env DUCKLAKE_CONNECTION __TEST_DIR__/{UUID}.db

test-env DATA_PATH __TEST_DIR__


statement ok
ATTACH 'ducklake:${DUCKLAKE_CONNECTION}' AS ducklake (DATA_PATH '${DATA_PATH}/ducklake_add_files_missing_fields');

statement ok
CREATE TABLE ducklake.test(s STRUCT(i INTEGER, j INTEGER));

statement ok
COPY (SELECT {'j': 84} s) TO '${DATA_PATH}/missing_field.parquet'

# adding a file with missing field results in an error
statement error
CALL ducklake_add_data_files('ducklake', 'test', '${DATA_PATH}/missing_field.parquet')
----
Column "s.i" exists in table "test" but was not found in file

statement ok
BEGIN

# UNLESS we specify "allow_missing
statement ok
CALL ducklake_add_data_files('ducklake', 'test', '${DATA_PATH}/missing_field.parquet', allow_missing => true)

query I
FROM ducklake.test
----
{'i': NULL, 'j': 84}

statement ok
COMMIT

query I
FROM ducklake.test
----
{'i': NULL, 'j': 84}
