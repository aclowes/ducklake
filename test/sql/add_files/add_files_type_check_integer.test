endloop

foreach ACCEPTED_TYPE tinyint smallint utinyint

statement ok
CALL ducklake_add_data_files('ducklake', 'test', '__TEST_DIR__/${ACCEPTED_TYPE}.parquet')

endloop

query I
FROM ducklake.test ORDER BY ALL
