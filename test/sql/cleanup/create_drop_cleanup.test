query I
SELECT COUNT(*) FROM glob('__TEST_DIR__/ducklake_createq_drop_cleanup/main/tbl/*.parquet')
----
1

statement ok
DROP TABLE ducklake.tbl

query I
SELECT COUNT(*) FROM glob('__TEST_DIR__/ducklake_createq_drop_cleanup/main/tbl/*.parquet')
----
0

statement ok
COMMIT

